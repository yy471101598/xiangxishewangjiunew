<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/kuang_gray_white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/text_30"
            android:text="请输入会员卡密码"
            android:layout_centerInParent="true"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/viewcolor"></View>
    </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="40dp"
         android:layout_marginLeft="10dp"
         android:layout_marginRight="10dp"
         android:layout_marginTop="15dp"
         >
         <TextView
             android:id="@+id/tv_n"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textSize="15sp"
             android:textColor="@color/text_30"
             android:text="数量"
             android:layout_centerVertical="true"
             />
         <EditText
             android:id="@+id/et_num"
             android:layout_width="match_parent"
             android:layout_height="30dp"
             android:background="@drawable/kuang_gray_white"
             android:layout_centerVertical="true"
             android:textColor="@color/text_30"
             android:textSize="15sp"
             android:paddingLeft="10dp"
             android:layout_toRightOf="@id/tv_n"
             android:layout_marginLeft="10dp"
             android:gravity="center_vertical|left"
             android:inputType="number"
             android:hint="请输入服务项目数量"
             />

     </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <TextView
            android:id="@+id/tv_j"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/text_30"
            android:text="积分"
            android:layout_centerVertical="true"
            />
        <EditText
            android:id="@+id/et_money"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/kuang_gray_white"
            android:layout_centerVertical="true"
            android:textColor="@color/text_30"
            android:textSize="15sp"
            android:paddingLeft="10dp"
            android:layout_toRightOf="@id/tv_j"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical|left"
            android:inputType="numberDecimal|number"
            android:hint="可以修改支付积分"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:background="@drawable/kuang_red_red"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="15sp"
            android:text="确定"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        ></View>
</LinearLayout>