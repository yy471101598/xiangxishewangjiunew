<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/numrecharge_rl_d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/numrecharge_tv_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_30"
            android:text="共"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/numrecharge_tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/theme_red"
            android:text="0"
            android:layout_toRightOf="@id/numrecharge_tv_n"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
        <TextView
            android:id="@+id/numrecharge_tv_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/text_30"
            android:text="件"
            android:layout_toRightOf="@id/numrecharge_tv_num"
            android:layout_centerVertical="true"
            />
        <LinearLayout
            android:id="@+id/numrecharge_li_jifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/numrecharge_tv_m"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/numrecharge_tv_j"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/text_30"
                android:text="酒瓶："
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/numrecharge_tv_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/theme_red"
                android:text="0"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/numrecharge_tv_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@id/numrecharge_li_jifen"
            android:textColor="@color/text_30"
            android:text="总价："
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/numrecharge_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_toRightOf="@id/numrecharge_tv_z"
            android:textColor="@color/theme_red"
            android:text="0"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <RelativeLayout
            android:id="@+id/numrecharge_rl_jiesan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:background="@color/theme_red"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="结算"
                android:layout_centerInParent="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        >
       <include layout="@layout/title_twoicon_back"></include>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewcolor" />
        <RelativeLayout
            android:id="@+id/numrecharge_rl_card"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"
            android:layout_below="@id/upview"
            >
            <TextView
                android:id="@+id/numrecharge_tv_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_30"
                android:text="会员卡号"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <EditText
                android:id="@+id/numrecharge_et_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_30"
                android:layout_toRightOf="@id/numrecharge_tv_card"
                android:gravity="center_vertical|right"
                android:background="@null"
                android:textSize="15sp"
                android:hint="请输入会员卡号"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/viewcolor"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/numrecharge_rl_vipname"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_30"
                android:text="会员姓名"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/numrecharge_tv_vipname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_30"
                android:textSize="15sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/viewcolor"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/numrecharge_rl_vipjifen"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"
            android:layout_below="@id/upview"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_30"
                android:text="会员酒瓶"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/numrecharge_tv_vipjifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_30"
                android:background="@null"
                android:textSize="15sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/viewcolor"></View>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/numrecharge_rl_vipyue"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/white"
            android:layout_below="@id/upview"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_30"
                android:text="会员积分"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/numrecharge_tv_vipyue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/text_30"
                android:background="@null"
                android:textSize="15sp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/viewcolor"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/text_30"
                android:text="会员等级"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/vip_tv_vipdengji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:textColor="@color/text_30"
                android:gravity="center_vertical|right"
                android:textSize="15sp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/viewcolor"></View>
        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:cacheColorHint="#00000000"
            android:dividerHeight="1dp"
            android:divider="@color/viewcolor"
            ></ListView>
        </LinearLayout>
</RelativeLayout>